[colors]
bg = ${xrdb:color0}
fg = ${xrdb:color15}
red = ${xrdb:color1}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
blue = ${xrdb:color4}
purple = ${xrdb:color5}
aqua = ${xrdb:color6}

[section/base-bar]
monitor = ${env:MONITOR}

; size/position
width = 100%:-30
height = 30
offset-x = 15
offset-y = 15

; colors
background = ${colors.bg}
foreground = ${colors.fg}
background-alt = ${colors.yellow}
foreground-alt = ${colors.aqua}

; fonts
font-0 = Fira Code
font-1 = Font Awesome 5 Free
font-2 = Font Awesome 5 Free Solid
font-3 = Font Awesome 5 Free Brands

; spacing
padding-left = 4
padding-right = 4
module-margin = 1

; i3 specific configuration
wm-restack = i3
override-redirect = true

[bar/desktop-bottom]
inherit = section/base-bar
bottom = true
tray-position = right

; modules
modules-left = wm
modules-center = date

[bar/desktop-top]
inherit = section/base-bar

; modules
modules-center = window
modules-right = cpu memory

[module/cpu]
type = internal/cpu
label = CPU %percentage%%

[module/date]
type = internal/date
date = "%m-%d-%Y"
time = "%I:%M %p"
label = %date% %time%

[module/memory]
type = internal/memory
label = RAM %percentage_used%%

[module/window]
type = internal/xwindow

[module/wm]
type = internal/i3

index-sort = true

label-focused = %index%
label-focused-background = ${colors.yellow}
label-focused-foreground = ${colors.bg}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = %index%
label-visible-padding = 1

