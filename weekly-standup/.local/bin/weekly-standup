#!/usr/bin/env bash

if ! command -v pandoc >& /dev/null; then
	echo "This command requires that 'pandoc' is installed"
	exit 1;
fi

if ! command -v slides >& /dev/null; then
	echo "This command requires that 'slides' is installed"
	exit 1;
fi

awk -f - ~/org/work.org <<'EOF' | pandoc --from org --to markdown | sed -E 's/^#//;2,$s/^#/---\n#/' | slides
BEGIN {
	isFound = 0;
	print "#+options: H:6"
}

/^\*\* TODO Weekly Standup/ {
	isFound = 1;
	print "** Weekly Standup";
	next;
}

isFound == 1 && $0 ~ /^\*\* TODO/ {
	exit 0;
}

isFound == 1 && $0 !~ /DEADLINE|^:/ {
	print;
}

EOF

